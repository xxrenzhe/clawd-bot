---
/**
 * Sticky Bottom CTA Bar
 *
 * A persistent CTA that appears after user scrolls past a threshold.
 * Designed to capture users who are engaged but haven't converted.
 */
interface Props {
  showAfterScroll?: number; // pixels to scroll before showing
  hideOnMobile?: boolean;
}

const {
  showAfterScroll = 500,
  hideOnMobile = false,
} = Astro.props;

const referralUrl = import.meta.env.HOSTING_REFERRAL_URL || 'https://hosting.com';
const trackingId = import.meta.env.HOSTING_REFERRAL_TRACKING_ID || 'clawdbot';

const url = new URL(referralUrl);
url.searchParams.set('utm_source', 'clawd-bot.app');
url.searchParams.set('utm_medium', 'referral');
url.searchParams.set('utm_campaign', trackingId);
url.searchParams.set('utm_content', 'sticky-bar');
---

<div
  id="sticky-cta-bar"
  class:list={[
    "sticky-cta fixed bottom-0 left-0 right-0 z-40 translate-y-full transform border-t border-blue-200/80 bg-gradient-to-r from-blue-600 to-indigo-600 px-4 py-3 shadow-float transition-transform duration-300 dark:border-blue-800",
    hideOnMobile && "hidden md:block",
  ]}
  data-show-after={showAfterScroll}
>
  <div class="mx-auto flex max-w-7xl flex-col items-center justify-between gap-3 sm:flex-row">
    <div class="flex items-center gap-3 text-white">
      <div class="hidden rounded-full bg-white/20 p-2 sm:block">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      </div>
      <div>
        <p class="text-sm font-semibold sm:text-base">
          Deploy your Clawdbot 24/7 â€” <span class="text-amber-200">20% off first month</span>
        </p>
        <p class="hidden text-xs text-blue-100 sm:block">
          Join 10,000+ developers. No credit card required for trial.
        </p>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <a
        href={url.toString()}
        target="_blank"
        rel="noopener sponsored"
        class="inline-flex items-center gap-2 whitespace-nowrap rounded-lg bg-white px-5 py-2 text-sm font-bold text-blue-700 shadow-md transition-all hover:bg-gray-100 hover:shadow-lg"
        data-analytics-event="hosting-cta-click"
        data-analytics-context="sticky-bar"
      >
        Start Free Trial
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
      <button
        id="sticky-cta-close"
        class="rounded-full p-1 text-white/70 transition-colors hover:bg-white/10 hover:text-white"
        aria-label="Close banner"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<script define:vars={{ showAfterScroll }}>
  const stickyBar = document.getElementById('sticky-cta-bar');
  const closeBtn = document.getElementById('sticky-cta-close');
  let isClosed = false;

  // Check if user previously closed the bar
  if (sessionStorage.getItem('sticky-cta-closed') === 'true') {
    isClosed = true;
  }

  function updateVisibility() {
    if (isClosed || !stickyBar) return;

    if (window.scrollY > showAfterScroll) {
      stickyBar.classList.remove('translate-y-full');
    } else {
      stickyBar.classList.add('translate-y-full');
    }
  }

  // Show/hide based on scroll position
  window.addEventListener('scroll', updateVisibility, { passive: true });

  // Close button functionality
  closeBtn?.addEventListener('click', () => {
    isClosed = true;
    stickyBar?.classList.add('translate-y-full');
    sessionStorage.setItem('sticky-cta-closed', 'true');
  });

  // Initial check
  updateVisibility();
</script>
