---
import { normalizeHostingReferralUrl } from '../../lib/hostingReferral';

const currentYear = new Date().getFullYear();

// Trusted domains that should pass link juice (no nofollow)
const trustedDomains = new Set([
  'github.com',
  'discord.gg',
  'clawd.bot',
  'docs.clawd.bot',
]);

function getDomain(url: string): string | null {
  try {
    const parsed = new URL(url);
    return parsed.hostname.replace(/^www\./, '');
  } catch {
    return null;
  }
}

function getRelAttribute(href: string): string | undefined {
  if (!href.startsWith('http')) return undefined;

  const domain = getDomain(href);
  if (!domain) return 'noopener noreferrer';

  // Check if domain is trusted
  const domainParts = domain.split('.');
  const checkDomains = [domain];
  if (domainParts.length > 2) {
    checkDomains.push(domainParts.slice(-2).join('.'));
  }

  for (const d of checkDomains) {
    if (trustedDomains.has(d)) {
      return 'noopener'; // Trusted: pass link juice
    }
  }

  return 'noopener noreferrer';
}

const referralUrl = normalizeHostingReferralUrl(import.meta.env.HOSTING_REFERRAL_URL);
const trackingId = import.meta.env.HOSTING_REFERRAL_TRACKING_ID || 'clawdbot';

function buildHostingUrl(context: string) {
  const url = new URL(referralUrl);
  url.searchParams.set('utm_source', 'clawd-bot.app');
  url.searchParams.set('utm_medium', 'referral');
  url.searchParams.set('utm_campaign', trackingId);
  url.searchParams.set('utm_content', `footer-${context}`);
  return url.toString();
}

const footerLinks = {
  Product: [
    { name: 'Features', href: '/features' },
    { name: 'Hosting', href: '/hosting', highlight: true },
    { name: 'Documentation', href: 'https://docs.clawd.bot/' },
    { name: 'Tutorials', href: '/articles' },
  ],
  Resources: [
    { name: 'Blog', href: '/articles' },
    { name: 'Deploy Guide', href: '/hosting' },
    { name: 'GitHub', href: 'https://github.com/clawdbot/clawdbot' },
    { name: 'Community', href: 'https://discord.gg/clawd' },
  ],
  Company: [
    { name: 'About Us', href: '/about' },
    { name: 'Openclaw / Moltbot / Clawdbot', href: '/moltbot-clawdbot' },
    { name: 'Contact', href: '/contact' },
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' },
  ],
};
