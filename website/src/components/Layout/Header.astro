---
import { normalizeHostingReferralUrl } from '../../lib/hostingReferral';

const currentPath = Astro.url.pathname;

const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Articles', href: '/articles' },
  { name: 'Hosting', href: '/hosting', highlight: true },
  { name: 'About', href: '/about' },
];

const referralUrl = normalizeHostingReferralUrl(import.meta.env.HOSTING_REFERRAL_URL);
const trackingId = import.meta.env.HOSTING_REFERRAL_TRACKING_ID || 'clawdbot';

function buildHostingUrl() {
  const url = new URL(referralUrl);
  url.searchParams.set('utm_source', 'clawd-bot.app');
  url.searchParams.set('utm_medium', 'referral');
  url.searchParams.set('utm_campaign', trackingId);
  url.searchParams.set('utm_content', 'header-cta');
  return url.toString();
}
---

<header class="sticky top-0 z-50 border-b border-gray-200/70 bg-white/80 backdrop-blur-md shadow-sm dark:border-gray-800/70 dark:bg-gray-950/80">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between sm:h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center gap-3 font-display text-xl font-bold text-gray-900 dark:text-white sm:text-2xl">
          <svg class="h-8 w-8 text-blue-600 sm:h-9 sm:w-9" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          <span class="flex flex-col leading-tight">
            <span class="leading-none">Openclaw</span>
            <span class="text-xs font-semibold text-gray-600 dark:text-gray-300">Moltbot / Clawdbot</span>
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex md:items-center md:gap-6">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'text-base font-medium transition-colors hover:text-blue-600',
              currentPath === item.href
                ? 'text-blue-600 dark:text-blue-400'
                : 'text-gray-700 dark:text-gray-300',
              item.highlight && 'relative',
            ]}
          >
            {item.name}
            {item.highlight && (
              <span class="absolute -right-2 -top-1 flex h-2 w-2">
                <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-amber-400 opacity-75"></span>
                <span class="relative inline-flex h-2 w-2 rounded-full bg-amber-500"></span>
              </span>
            )}
          </a>
        ))}
        <a
          href={buildHostingUrl()}
          target="_blank"
          rel="noopener sponsored"
          class="inline-flex items-center gap-2 rounded-lg bg-gradient-to-r from-blue-600 to-indigo-600 px-5 py-2.5 text-base font-semibold text-white shadow-sm transition-all hover:from-blue-700 hover:to-indigo-700 hover:shadow-md"
          title="Deploy Openclaw (Moltbot/Clawdbot) 24/7 with VPS hosting"
          data-analytics-event="hosting-cta-click"
          data-analytics-context="header"
        >
          <span class="hidden sm:inline">Deploy 24/7</span>
          <span class="sm:hidden">Deploy</span>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        type="button"
        class="md:hidden rounded-lg p-2.5 text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-800"
        aria-label="Toggle menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden pb-4 md:hidden" aria-hidden="true">
      <div class="mt-3 rounded-2xl border border-gray-200/70 bg-white/95 p-4 shadow-lg dark:border-gray-800/70 dark:bg-gray-950/95">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'block rounded-lg px-2 py-2.5 text-lg font-medium transition-colors hover:text-blue-600',
              currentPath === item.href
                ? 'text-blue-600 dark:text-blue-400'
                : 'text-gray-700 dark:text-gray-300',
            ]}
          >
            {item.name}
            {item.highlight && (
              <span class="ml-2 inline-flex items-center rounded-full bg-amber-100 px-2 py-0.5 text-xs font-medium text-amber-800">
                Hot
              </span>
            )}
          </a>
        ))}
        <a
          href={buildHostingUrl()}
          target="_blank"
          rel="noopener sponsored"
          class="mt-3 inline-flex w-full items-center justify-center gap-2 rounded-lg bg-gradient-to-r from-blue-600 to-indigo-600 px-5 py-3 text-base font-semibold text-white transition-colors hover:from-blue-700 hover:to-indigo-700"
          data-analytics-event="hosting-cta-click"
          data-analytics-context="header-mobile"
        >
          Deploy 24/7
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  const closeMenu = () => {
    menu?.classList.add('hidden');
    button?.setAttribute('aria-expanded', 'false');
    menu?.setAttribute('aria-hidden', 'true');
  };

  const openMenu = () => {
    menu?.classList.remove('hidden');
    button?.setAttribute('aria-expanded', 'true');
    menu?.setAttribute('aria-hidden', 'false');
  };

  button?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    if (isOpen) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  menu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', closeMenu);
  });

  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      closeMenu();
    }
  });
</script>
