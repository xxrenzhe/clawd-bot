---
const baseUrl = Astro.site?.href || 'https://www.clawd-bot.app';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Moltbot',
  alternateName: ['Clawdbot', 'Clawd Bot'],
  url: baseUrl,
  description: 'Moltbot (Clawdbot) is an open-source AI assistant for productivity, automation, and development. Learn how to set up and use Moltbot/Clawdbot effectively.',
  publisher: {
    '@type': 'Organization',
    name: 'Moltbot',
    alternateName: 'Clawdbot',
    logo: {
      '@type': 'ImageObject',
      url: `${baseUrl}/logo.jpg`,
    },
  },
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: `${baseUrl}/articles?q={search_term_string}`,
    },
    'query-input': 'required name=search_term_string',
  },
  sameAs: [
    'https://github.com/clawdbot/clawdbot',
    'https://discord.gg/clawd',
  ],
};

const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'Moltbot',
  url: baseUrl,
  logo: `${baseUrl}/logo.jpg`,
  description: 'Moltbot (Clawdbot) open-source AI assistant platform',
  alternateName: 'Clawdbot',
  sameAs: [
    'https://github.com/clawdbot/clawdbot',
    'https://discord.gg/clawd',
  ],
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'Customer Support',
    availableLanguage: ['English'],
  },
};
---

<script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} />
<script is:inline type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
