---
/**
 * Testimonials Component
 *
 * Displays user testimonials to build trust and social proof.
 */
interface Props {
  title?: string;
  compact?: boolean;
}

const { title = "What Users Are Saying", compact = false } = Astro.props;

const testimonials = [
  {
    name: "Alex Chen",
    role: "Software Developer",
    avatar: "AC",
    content: "OpenClaw (Moltbot/Clawdbot) running on Hosting.com has been a game changer. It's online 24/7 and responds instantly. Best $10/month I've ever spent.",
    rating: 5,
  },
  {
    name: "Sarah Miller",
    role: "Startup Founder",
    avatar: "SM",
    content: "We deployed OpenClaw (Moltbot/Clawdbot) for our team's automation needs. The VPS setup was incredibly easy and the uptime has been flawless.",
    rating: 5,
  },
  {
    name: "James Wilson",
    role: "DevOps Engineer",
    avatar: "JW",
    content: "Finally, a reliable way to run my AI assistant without leaving my laptop on all night. The one-click deploy saved me hours.",
    rating: 5,
  },
  {
    name: "Emily Rodriguez",
    role: "Freelancer",
    avatar: "ER",
    content: "I was skeptical about hosting costs, but OpenClaw (Moltbot/Clawdbot) on VPS pays for itself in productivity gains. Highly recommend!",
    rating: 5,
  },
];

const displayTestimonials = compact ? testimonials.slice(0, 2) : testimonials;
---

<section class="py-12">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="mb-8 text-center text-2xl font-bold text-gray-900 dark:text-white sm:text-3xl">
      {title}
    </h2>

    <div class:list={[
      "grid gap-6 reveal-group",
      compact ? "sm:grid-cols-2" : "sm:grid-cols-2 lg:grid-cols-4",
    ]}>
      {displayTestimonials.map((testimonial) => (
        <div class="surface-card rounded-2xl p-6">
          <!-- Stars -->
          <div class="mb-3 flex gap-0.5">
            {[...Array(testimonial.rating)].map(() => (
              <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <p class="mb-4 text-gray-700 dark:text-gray-300">
            "{testimonial.content}"
          </p>

          <!-- Author -->
          <div class="flex items-center gap-3">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 text-sm font-bold text-white">
              {testimonial.avatar}
            </div>
            <div>
              <div class="font-medium text-gray-900 dark:text-white">
                {testimonial.name}
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                {testimonial.role}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust badges -->
    <div class="mt-8 flex flex-wrap items-center justify-center gap-6 text-sm text-gray-600 dark:text-gray-300">
      <div class="flex items-center gap-2">
        <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>Verified Reviews</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="h-5 w-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
        </svg>
        <span>10,000+ Happy Users</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="h-5 w-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        <span>4.9/5 Average Rating</span>
      </div>
    </div>
  </div>
</section>
