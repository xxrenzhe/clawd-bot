---
import BaseLayout from '../layouts/BaseLayout.astro';
import WebsiteSchema from '../components/SEO/WebsiteSchema.astro';
import SoftwareSchema from '../components/SEO/SoftwareSchema.astro';
import HostingCTAEnhanced from '../components/CTA/HostingCTAEnhanced.astro';
import StickyBottomCTA from '../components/CTA/StickyBottomCTA.astro';
import ExitIntentPopup from '../components/CTA/ExitIntentPopup.astro';
import Testimonials from '../components/Social/Testimonials.astro';
import NewsletterSignup from '../components/Email/NewsletterSignup.astro';
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articles');
const featuredArticles = allArticles
  .filter((article) => article.data.featured)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);

const softwareFeatures = [
  'Open-source, self-hosted AI assistant',
  'Multi-channel messaging support',
  'Extensible skills and integrations',
  'Privacy-first by design',
  'Fast routing to preferred LLMs',
];
---

<BaseLayout
  title="OpenClaw (Moltbot/Clawdbot) - Open Source AI Assistant"
  description="Discover OpenClaw (formerly Moltbot/Clawdbot), the powerful open-source AI assistant for productivity, automation, and development. Learn how to set up and use OpenClaw effectively."
  keywords={['openclaw', 'moltbot', 'clawdbot', 'AI assistant', 'open source', 'automation', 'productivity', 'Claude AI']}
>
  <WebsiteSchema />
  <SoftwareSchema
    name="OpenClaw (Moltbot/Clawdbot)"
    description="OpenClaw (formerly Moltbot/Clawdbot) is an open-source AI assistant for productivity, automation, and development."
    operatingSystem={['macOS', 'Linux', 'Windows']}
    applicationCategory="DeveloperApplication"
    installUrl="https://docs.clawd.bot/start/getting-started"
    featureList={softwareFeatures}
  />

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-white to-indigo-100 py-16 dark:from-gray-950 dark:via-gray-900 dark:to-indigo-950 sm:py-24">
    <div class="pointer-events-none absolute -top-24 right-[-6rem] h-72 w-72 rounded-full bg-blue-200/40 blur-3xl dark:bg-blue-500/10"></div>
    <div class="pointer-events-none absolute bottom-[-10rem] left-[-6rem] h-80 w-80 rounded-full bg-teal-200/40 blur-3xl dark:bg-teal-500/10"></div>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="mb-6 text-4xl font-bold leading-tight tracking-tight text-gray-900 dark:text-white sm:text-5xl md:text-6xl">
          Your Open Source
          <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
            AI Assistant
          </span>
        </h1>
        <p class="mx-auto mb-8 max-w-2xl text-lg text-gray-700 dark:text-gray-300 sm:text-xl">
          OpenClaw (formerly Moltbot/Clawdbot) is a powerful, open-source AI assistant that helps you automate tasks, boost productivity, and streamline your workflow.
        </p>
        <p class="mb-6 text-sm text-gray-700 dark:text-gray-300">
          Explore OpenClaw / Moltbot / Clawdbot resources →
          <a href="/moltbot-clawdbot" class="font-medium text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300">
            OpenClaw, Moltbot &amp; Clawdbot
          </a>
        </p>
        <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a
            href="https://docs.clawd.bot/start/getting-started"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex w-full items-center justify-center gap-2 rounded-lg bg-blue-600 px-8 py-4 text-lg font-semibold text-white shadow-float transition-all hover:bg-blue-700 hover:shadow-lg sm:w-auto"
          >
            Get Started
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a
            href="/articles"
            class="inline-flex w-full items-center justify-center gap-2 rounded-lg border-2 border-blue-600 px-8 py-4 text-lg font-semibold text-blue-700 transition-all hover:bg-blue-50 dark:border-blue-400 dark:text-blue-300 dark:hover:bg-blue-950 sm:w-auto"
          >
            Browse Tutorials
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 sm:py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mb-12 text-center">
        <h2 class="mb-4 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          Why Choose OpenClaw (Moltbot/Clawdbot)?
        </h2>
        <p class="mx-auto max-w-2xl text-base text-gray-700 dark:text-gray-300 sm:text-lg">
          Powerful features designed to enhance your productivity and automate your workflow.
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-3 reveal-group">
        <div class="surface-card rounded-2xl p-6 transition-all hover:-translate-y-1 hover:shadow-float">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 dark:bg-blue-900">
            <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
            Lightning Fast
          </h3>
          <p class="text-gray-700 dark:text-gray-300">
            Built for speed and efficiency, OpenClaw responds instantly to your commands and automates repetitive tasks.
          </p>
        </div>

        <div class="surface-card rounded-2xl p-6 transition-all hover:-translate-y-1 hover:shadow-float">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-green-100 dark:bg-green-900">
            <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
            Privacy First
          </h3>
          <p class="text-gray-700 dark:text-gray-300">
            Open source and self-hostable. Your data stays under your control with complete transparency.
          </p>
        </div>

        <div class="surface-card rounded-2xl p-6 transition-all hover:-translate-y-1 hover:shadow-float">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-teal-100 dark:bg-teal-900">
            <svg class="h-6 w-6 text-teal-600 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
            </svg>
          </div>
          <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
            Highly Extensible
          </h3>
          <p class="text-gray-700 dark:text-gray-300">
            Customize and extend OpenClaw with plugins, skills, and integrations to fit your unique workflow.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Hosting CTA after Features -->
  <section class="py-12 sm:py-16">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <HostingCTAEnhanced context="hero" variant="featured" />
    </div>
  </section>

  <!-- Featured Articles Section -->
  {featuredArticles.length > 0 && (
    <section class="bg-white/70 py-16 dark:bg-gray-950/70 sm:py-24">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-12 flex flex-col items-start gap-4 sm:flex-row sm:items-center sm:justify-between">
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
            Featured Tutorials
          </h2>
          <a
            href="/articles"
            class="text-blue-600 transition-colors hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
          >
            View all →
          </a>
        </div>

        <div class="grid gap-8 md:grid-cols-3 reveal-group">
          {featuredArticles.map((article) => (
            <article class="surface-card group rounded-2xl transition-all hover:-translate-y-1 hover:shadow-float">
              <a href={`/articles/${article.slug}`} class="block">
                <div class="p-6">
                  <div class="mb-3 flex items-center gap-2 text-sm text-gray-700 dark:text-gray-300">
                    <span class="rounded-full bg-blue-100 px-2 py-1 text-xs font-medium text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                      {article.data.category}
                    </span>
                    <span>{article.data.readingTime} min read</span>
                  </div>
                  <h3 class="mb-2 text-xl font-bold text-gray-900 transition-colors group-hover:text-blue-600 dark:text-white dark:group-hover:text-blue-400">
                    {article.data.title}
                  </h3>
                  <p class="mb-4 text-gray-700 dark:text-gray-300">
                    {article.data.description}
                  </p>
                  <div class="flex items-center gap-2 text-sm text-blue-600 dark:text-blue-400">
                    Read more
                    <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Testimonials Section -->
  <Testimonials compact={true} />

  <!-- Newsletter Signup Section -->
  <section class="bg-white/70 py-16 dark:bg-gray-950/70 sm:py-20">
    <div class="mx-auto max-w-xl px-4 sm:px-6 lg:px-8">
      <NewsletterSignup
        context="homepage"
        title="Request the OpenClaw (Moltbot/Clawdbot) Setup Guide"
        description="Join 5,000+ developers. Get our deployment checklist and occasional tips by email."
        leadMagnet="Setup checklist + optimization tips"
        buttonText="Request Guide"
      />
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 sm:py-24">
    <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
      <h2 class="mb-4 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        Ready to Get Started?
      </h2>
      <p class="mb-8 text-lg text-gray-700 dark:text-gray-300 sm:text-xl">
        Join thousands of users who are already using OpenClaw (Moltbot/Clawdbot) to boost their productivity.
      </p>
      <a
        href="https://docs.clawd.bot/start/getting-started"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex w-full items-center justify-center gap-2 rounded-lg bg-blue-600 px-8 py-4 text-lg font-semibold text-white shadow-float transition-all hover:bg-blue-700 hover:shadow-lg sm:w-auto"
      >
        Start Using OpenClaw
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- Sticky Bottom CTA -->
  <StickyBottomCTA showAfterScroll={600} />

  <!-- Exit Intent Popup -->
  <ExitIntentPopup />
</BaseLayout>
